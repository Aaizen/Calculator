<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/colorBg"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:padding="20dp">
    <TextView
        android:id="@+id/layar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60dp"
        android:typeface="serif"/>
    <EditText
        android:id="@+id/teks1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layar1"
        android:enabled="false"
        android:gravity="bottom"
        android:layout_centerVertical="true"
        android:lines="2"
        android:maxLines="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/clear"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks1"
        android:layout_marginTop="20dp"
        android:text="C"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/persen"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks1"
        android:layout_toRightOf="@id/clear"
        android:layout_marginTop="20dp"
        android:text="%"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/kur1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks1"
        android:layout_toRightOf="@id/persen"
        android:layout_marginTop="20dp"
        android:text="âŒ«"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/bagi"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks1"
        android:layout_toRightOf="@id/kur1"
        android:layout_marginTop="20dp"
        android:text="/"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol7"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clear"
        android:layout_marginTop="20dp"
        android:text="7"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol8"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/persen"
        android:layout_toRightOf="@id/tombol7"
        android:layout_marginTop="20dp"
        android:text="8"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol9"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kur1"
        android:layout_toRightOf="@id/tombol8"
        android:layout_marginTop="20dp"
        android:text="9"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/kali"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bagi"
        android:layout_toRightOf="@id/tombol9"
        android:layout_marginTop="20dp"
        android:text="X"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol4"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombol7"
        android:layout_marginTop="20dp"
        android:text="4"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol5"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombol8"
        android:layout_toRightOf="@id/tombol4"
        android:layout_marginTop="20dp"
        android:text="5"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol6"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombol9"
        android:layout_toRightOf="@id/tombol5"
        android:layout_marginTop="20dp"
        android:text="6"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/kurang"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kali"
        android:layout_toRightOf="@id/tombol6"
        android:layout_marginTop="20dp"
        android:text="-"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombol4"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombol5"
        android:layout_toRightOf="@id/tombol1"
        android:layout_marginTop="20dp"
        android:text="2"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombol6"
        android:layout_toRightOf="@id/tombol2"
        android:layout_marginTop="20dp"
        android:text="3"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tambah"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kurang"
        android:layout_toRightOf="@+id/tombol3"
        android:layout_marginTop="20dp"
        android:text="+"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol0"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombol1"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/tombol00"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombol2"
        android:layout_toRightOf="@id/tombol0"
        android:layout_marginTop="20dp"
        android:text="00"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/titik"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombol3"
        android:layout_toRightOf="@id/tombol00"
        android:layout_marginTop="20dp"
        android:text="."
        android:textSize="30sp"/>
    <Button
        android:id="@+id/hasil"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tambah"
        android:layout_toRightOf="@id/titik"
        android:layout_marginTop="20dp"
        android:text="="
        android:textSize="30sp"/>
    </RelativeLayout>
    </ScrollView>